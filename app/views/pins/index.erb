<div class="header">
  <h1>Learning to Code</h1>
  <h3>A Collection of Ruby on Rails Resources for Beginners</h3>
</div>
<hr/>
  <div class="pins">
    <% @pins.each_slice(3) do |row| %>
      <div class="row">
        <% row.each do |pin| %>      
          <div class="pin-container col-md-4">
            <div class="pin">
              <div class="pin-header row">
                <div class="logo-thumbnail col-xs-3">
                <% if !(pin.image.url.nil?) %>
                    <p> <img src="<%= "#{pin.image.url(:medium)}" %>"></p>    
                <% else %>
                  <% if "#{pin.category_id}" == "rails" %>
                      <%= image_tag('rails-logo-thumbnail.png') %>
                  <% elsif "#{pin.category_id}" == "ruby" %>
                      <%= image_tag('ruby-logo-thumbnail.png') %>                
                  <% end %>
                <% end %>
                </div>
                
                 <div class="pin-title col-xs-9">
                  <h4>
                    <!--<a href="<%= pin_path(pin) %>">-->
                    <!--<a href="<%= "/pins/name-#{pin.slug}" %>">-->
                    <!--<a href="<%= pin_by_name_path(slug: pin.slug) %>">
                      <%= "#{pin.title}" %>
                    </a>-->
                    <%= link_to  "#{pin.title}", pin_by_name_path(slug: pin.slug), html_options = {target: "_blank", class: "url"}%>
                  </h4>
                  <!--<a class="url" href="<%= "#{pin.url}" %>" target="_blank">
                    <%= "#{pin.url.truncate(30)}" %>
                  </a>-->
                  <%= link_to "#{pin.url.truncate(30)}", "#{pin.url}", html_options = {target: "_blank", class: "url"}%>
                </div>
              </div>
                <hr/>
                <p class="text"><%= "#{pin.text}" %></p>
                <%= link_to repin_path(pin), class: "btn btn-default", method: "post" do %>
                  <!--<icon here?>-->
                  Repin!
                <% end %>  
              </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div>
    <%= link_to "Add a new pin" ,"/pins/new" , html_options = {target: "_blank", class: "url"} %>
  </div>
<hr/>